{
  "name": "http",
  "description": "HTTP nodes for ChiÏ‡",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodule/http.git"
  },
  "dependencies": {
    "request": "2.9.x"
  },
  "nodes": [
    {
      "ports": {
        "input": {
          "app": {
            "type": "Server"
          }
        },
        "output": {
          "http": {
            "type": "Server"
          }
        }
      },
      "require": {
        "http": "internal"
      },
      "phrases": {
        "active": "Creating HTTP Server"
      },
      "description": "Create HTTP Server",
      "ns": "http",
      "name": "createServer",
      "fn": "output.http = http.createServer(input.app);\n"
    },
    {
      "ports": {
        "input": {
          "http": {
            "type": "Server",
            "required": true
          },
          "port": {
            "type": "string",
            "default": "8080"
          },
          "host": {
            "type": "string",
            "default": "0.0.0.0"
          }
        },
        "output": {
          "http": {
            "type": "Server"
          }
        }
      },
      "phrases": {
        "active": "HTTP Listening on {{input.host}}:{{input.port}}"
      },
      "description": "HTTP Listen",
      "ns": "http",
      "name": "listen",
      "fn": "output.http = input.http.listen(input.port, input.host);\n"
    },
    {
      "ports": {
        "input": {
          "url": {
            "type": "string",
            "format": "uri",
            "title": "Url Request",
            "description": "The url to be requested.",
            "required": true
          }
        },
        "output": {
          "error": {
            "type": "object"
          },
          "res": {
            "type": "Stream"
          },
          "body": {
            "type": "string"
          }
        }
      },
      "require": {
        "request": "2.9.x"
      },
      "phrases": {
        "active": "Performing HTTP request to {{input.url}}"
      },
      "description": "http request",
      "ns": "http",
      "name": "request",
      "fn": "var obj = {};\nobj.request = request;\noutput = [obj, 'request', input.url]\n"
    }
  ],
  "twigs": []
}